@model BookGUI.ViewModels.CountryAuthorsViewModel
@{
    ViewData["Title"] = "GetCountryById";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<h2 class="text-success">@ViewBag.SuccessMessage</h2>

<div>
    <h1>Country Details</h1>
    <br />
    <div>
        <p>
            <strong>Country name: </strong> @Model.Country.Name
        </p>
        <div class="form-group text-center">
            <a class="btn btn-sm btn-primary" asp-controller="Countries" asp-action="UpdateCountry" asp-route-countryId="@Model.Country.Id">Update</a>
            <a class="btn btn-sm btn-danger" asp-controller="Countries" asp-action="DeleteCountry" asp-route-countryId="@Model.Country.Id">Delete</a>
        </div>
    </div>
    <br /> <br />
    <div>
        <h4>Authors from this country: </h4>
        <h4>@ViewBag.AuthorMessage</h4>
        @foreach (var item in Model.Authors)
        {
            <div>
                <p>
                    <strong>Author name: </strong>
                    <a asp-controller="Authors" asp-action="GetAuthorById" asp-route-authorId="@item.Id"> @item.FirstName @item.LastName </a>
                </p>
            </div>
        }
    </div>
</div>