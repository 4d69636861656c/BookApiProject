@model BookApiProject.Models.Author
@{
    ViewData["Title"] = "CreateAuthor";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h1>Add a new author</h1>
<form asp-controller="Authors" asp-action="CreateAuthor" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="FirstName">First Name: </label>
            </div>
            <div class="col-sm-3">
                <input asp-for="FirstName" placeholder="First Name" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="LastName">Last Name: </label>
            </div>
            <div class="col-sm-3">
                <input asp-for="LastName" placeholder="Last Name" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Country">Country Name:</label>
            </div>
            <div class="col-sm-3">
                @await Component.InvokeAsync("CountriesList")
            </div>
        </div>
        <input type="submit" value="Add Author" class="btn btn-sm btn-primary" />
    </div>
</form>
<a asp-controller="Authors" asp-action="Index" class="btn btn-sm btn-primary">Cancel</a>