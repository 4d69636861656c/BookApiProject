@model IEnumerable<BookApiProject.Dtos.CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h2>@ViewBag.Message</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2 class="text-success">@ViewBag.SuccessMessage</h2>

<div>
    <h2>List of categories</h2>
    <br />
    @foreach (var item in Model)
    {
        <p>
            <strong>@item.Name</strong>
            <a asp-controller="Categories" asp-action="GetCategoryById" asp-route-categoryId="@item.Id"> | Details </a>
            <a asp-controller="Categories" asp-action="DeleteCategory" asp-route-categoryId="@item.Id"> | Delete </a>
        </p>
    }
</div>