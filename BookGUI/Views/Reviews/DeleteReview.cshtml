@model BookApiProject.Models.Review
@{
    ViewData["Title"] = "DeleteReview";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div>
    <h2>Do you really want to delete this review?</h2>
    <br />
    <form asp-controller="Reviews" asp-action="DeleteReview" asp-route-reviewId="@Model.Id" method="post">
        <div>
            <p>
                <strong>Review written by reviewer </strong>
                <span> @Model.Reviewer.FirstName @Model.Reviewer.LastName </span>
                <strong> for the book </strong>
                <span> @Model.Book.Title </span>
                <strong>.</strong>
                <br />
                <strong>Headline: </strong>
                <span>@Model.Headline</span>
                <br />
                <strong>Rating: </strong>
                <span>@Model.Rating stars</span>
                <br />
                <strong>Review text: </strong>
                <span>@Model.ReviewText</span>
                <br />
            </p>
        </div>
        <input type="submit" value="Delete Review" class="btn btn-sm btn-danger" />
    </form>
    <br />
    <a class="btn btn-sm btn-primary" asp-controller="Reviews" asp-action="GetReviewById" asp-route-reviewId="@Model.Id">Cancel</a>
</div>