@model BookGUI.ViewModels.ReviewReviewerBookViewModel
@{
    ViewData["Title"] = "GetReviewById";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<h2  class="text-success">@ViewBag.SuccessMessage</h2>

<div>
    <h2>Review details</h2>
    <br />
    <div>
        <p>
            <strong>Review written by reviewer </strong>
            <a asp-controller="Reviewers" asp-action="GetReviewerById" asp-route-reviewerId="@Model.Reviewer.Id"> @Model.Reviewer.FirstName @Model.Reviewer.LastName </a>
            <strong> for the book </strong>
            <a asp-controller="Home" asp-action="GetBookById" asp-route-bookId="@Model.Book.Id"> @Model.Book.Title </a>
            <strong>.</strong>
            <br />
            <strong>Headline: </strong>
            <span>@Model.Review.Headline</span>
            <br />
            <strong>Rating: </strong>
            <span>@Model.Review.Rating stars</span>
            <br />
            <strong>Review text: </strong>
            <span>@Model.Review.ReviewText</span>
            <br />
        </p>
        <div class="form-group text-center">
            <a class="btn btn-sm btn-primary" asp-controller="Reviews" asp-action="UpdateReview" asp-route-reviewId="@Model.Review.Id" asp-route-ReviewerId="@Model.Reviewer.Id" asp-route-bookId="@Model.Book.Id">Update</a>
            <a class="btn btn-sm btn-danger" asp-controller="Reviews" asp-action="DeleteReview" asp-route-reviewId="@Model.Review.Id">Delete</a>
        </div>
    </div>
</div>