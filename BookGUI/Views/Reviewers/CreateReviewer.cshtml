@model BookApiProject.Models.Reviewer
@{
    ViewData["Title"] = "CreateReviewer";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h1>Add a new reviewer</h1>

<form asp-controller="Reviewers" asp-action="CreateReviewer" method="post">
    <div class="form-group">
        <div>
            <label asp-for="FirstName">First name:</label>
        </div>
        <div>
            <input asp-for="FirstName" placeholder="First name" />
        </div>
        <div>
            <label asp-for="LastName">Last name:</label>
        </div>
        <div>
            <input asp-for="LastName" placeholder="Last name" />
        </div>
        <br />
        <input type="submit" value="Add Reviewer" class="btn btn-sm btn-primary" />
    </div>
</form>